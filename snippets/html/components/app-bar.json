{
  "app-bar": {
		"prefix": ["forge-app-bar", "<forge-app-bar>"],
		"body": [
			"<forge-app-bar title-text=\"${1:app-bar Title}\">$0</forge-app-bar>"
		],
		"description": "Forge app-bar component"
  },
	"app-bar-logo": {
		"prefix": ["forge-app-bar-logo"],
		"body": [
			"<forge-icon slot=\"logo\" name=\"forge_logo\"></forge-icon>"
		],
		"description": "Forge app-bar search component"
  },
	"app-bar-search": {
		"prefix": ["forge-app-bar-search", "<forge-app-bar-search>"],
		"body": [
			"<forge-app-bar-search slot=\"center\">",
				"\t<input type=\"text\" placeholder=\"Search...\" />",
			"</forge-app-bar-search>"
		],
		"description": "Forge app-bar search component"
  },
	"app-bar-menu-button": {
		"prefix": ["forge-app-bar-menu-button", "<forge-app-bar-menu-button>"],
		"body": [
			"<forge-app-bar-menu-button slot=\"start\"></forge-app-bar-menu-button>"
		],
		"description": "Forge app-bar menu button component"
  },
	"app-bar-help-button": {
		"prefix": ["forge-app-bar-help-button", "<forge-app-bar-help-button>"],
		"body": [
			"<forge-app-bar-help-button slot=\"end\"></forge-app-bar-help-button>"
		],
		"description": "Forge app-bar menu button component"
  },
	"app-bar-notification-button": {
		"prefix": ["forge-app-bar-notification-button", "<forge-app-bar-notification-button>"],
		"body": [
			"<forge-app-bar-notification-button slot=\"end\"></forge-app-bar-notification-button>"
		],
		"description": "Forge app-bar notification button component"
  },
	"app-bar-app-launcher-button": {
		"prefix": ["forge-app-bar-app-launcher-button", "<forge-app-bar-app-launcher-button>"],
		"body": [
			"<forge-app-bar-app-launcher-button slot=\"end\"></forge-app-bar-app-launcher-button>"
		],
		"description": "Forge app-bar app launcher button component"
  },
	"app-bar-profile-button": {
		"prefix": ["forge-app-bar-profile-button", "<forge-app-bar-profile-button>"],
		"body": [
			"<forge-app-bar-profile-button slot=\"end\" avatar-text=\"$2\" full-name=\"${2:First Last}\" email=\"${1:first.last@tylertech.com}\"></forge-app-bar-profile-button>"
		],
		"description": "Forge app-bar profile button component"
  },
	"app-bar-full": {
		"prefix": ["forge-app-bar:all"],
		"body": [
			"<forge-app-bar title-text=\"${1:app-bar Title}\">",
				"\t<forge-app-bar-menu-button slot=\"start\"></forge-app-bar-menu-button>",
				"\t<forge-icon name=\"forge_logo\" slot=\"logo\"></forge-icon>",
				"\t<forge-app-bar-search slot=\"center\">",
					"\t\t<input type=\"text\" placeholder=\"Search...\" />",
				"\t</forge-app-bar-search>",
				"\t<forge-app-bar-help-button slot=\"end\"></forge-app-bar-help-button>",
				"\t<forge-app-bar-notification-button slot=\"end\"></forge-app-bar-notification-button>",
				"\t<forge-app-bar-app-launcher-button slot=\"end\"></forge-app-bar-app-launcher-button>",
				"\t<forge-app-bar-profile-button slot=\"end\" avatar-text=\"First Last\" full-name=\"First Last\" email=\"first.last@tylertech.com\"></forge-app-bar-profile-button>",
			"</forge-app-bar>"
		],
		"description": "Forge app-bar with all sub-components"
  }
}